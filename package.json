{
  "name": "amateur-radio-wifi-scanner",
  "productName": "WiHamScan",
  "version": "0.0.1",
  "gypfile": true,
  "main": "main.js",
  "dependencies": {
    "bindings": "^1.5.0",
    "debug": "^4.3.4",
    "electron-squirrel-startup": "^1.0.0",
    "fast-glob": "^3.2.12",
    "handlebars": "^4.7.7",
    "koa": "^2.13.4",
    "koa-compress": "^5.1.0",
    "koa-router": "^12.0.0",
    "koa-websocket": "^7.0.0",
    "node-addon-api": "^5.0.0"
  },
  "scripts": {
    "start": "electron-forge start",
    "xbuild": "node-gyp --release --thin=yes rebuild",
    "package": "electron-forge package",
    "make": "electron-forge make --arch=arm64;#electron-forge make --arch=x64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-dmg": "^6.0.0-beta.66",
    "@electron-forge/maker-rpm": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "@electron-forge/maker-zip": "^6.0.0-beta.66",
    "@electron/universal": "^1.3.0",
    "electron": "^21.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icons/icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Amateur Radio WiFi Scanner"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "name": "Amateur Radio WiFi Scanner",
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
